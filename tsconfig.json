  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true, // Disallow features that require cross-file information for emit.
    "lib": ["ES2017", "dom"],
    "noEmit": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts"]
}
