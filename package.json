{
  "name": "web-containers",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:dev": "shx rm -rf dist/ && cross-env NODE_ENV=development rollup -c",
    "build:dev:watch:dirty": "cross-env NODE_ENV=development rollup -c -w",
    "build:prod": "shx rm -rf dist/ && cross-env NODE_ENV=production rollup -c",
    "ci": "run-p build:prod lint:js lint:md test typecheck",
    "predev": "npm run build:dev",
    "dev": "run-p --print-label --print-name build:dev:watch:dirty start:firefox",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx",
    "lint:js": "npm run eslint .",
    "lint:md": "npm run remark .",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=.gitignore",
    "start:firefox": "web-ext run --source-dir dist/",
    "test": "jest --config .jestrc.json",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@babel/polyfill": "7.7.0",
    "escape-string-regexp": "2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/preset-env": "7.7.7",
    "@babel/preset-typescript": "7.7.7",
    "@commitlint/cli": "8.3.4",
    "@commitlint/config-conventional": "8.3.4",
    "@foray1010/eslint-config": "2.1.0",
    "@foray1010/prettier-config": "3.0.0",
    "@foray1010/remark-preset": "2.0.0",
    "@types/firefox-webext-browser": "70.0.1",
    "@types/jest": "24.0.25",
    "@types/rollup-plugin-json": "3.0.2",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "3.0.0",
    "cross-env": "6.0.3",
    "eslint": "6.8.0",
    "fast-glob": "3.1.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.5.0",
    "npm-run-all": "4.1.5",
    "postcss": "7.0.26",
    "postcss-preset-env": "6.7.0",
    "prettier": "1.19.1",
    "remark-cli": "7.0.1",
    "rollup": "1.27.14",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "3.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-svelte": "5.1.1",
    "rollup-plugin-terser": "5.1.3",
    "shx": "0.3.2",
    "sort-package-json": "1.35.0",
    "svelte": "2.16.1",
    "typescript": "3.7.4",
    "web-ext": "4.0.0"
  },
  "engines": {
    "node": ">=12.13",
    "npm": ">=6.6"
  }
}
