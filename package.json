{
  "name": "web-containers",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:dev": "shx rm -rf dist/ && cross-env NODE_ENV=development rollup -c",
    "build:dev:watch:dirty": "cross-env NODE_ENV=development rollup -c -w",
    "build:prod": "shx rm -rf dist/ && cross-env NODE_ENV=production rollup -c",
    "ci": "run-p build:prod lint:js lint:md test type:check",
    "predev": "npm run build:dev",
    "dev": "run-p --print-label --print-name build:dev:watch:dirty start:firefox",
    "eslint": "eslint --ext=cjs,js,mjs,ts,tsx",
    "postinstall": "husky install",
    "lint:js": "npm run eslint .",
    "lint:md": "npm run remark .",
    "prettier": "prettier --ignore-path=node_modules/@foray1010/prettier-config/prettierignore",
    "remark": "remark --frail --ignore-path=node_modules/@foray1010/remark-preset/remarkignore --ignore-path-resolve-from=cwd",
    "start:firefox": "web-ext run --source-dir dist/",
    "test": "jest --config .jestrc.json",
    "type:check": "tsc"
  },
  "dependencies": {
    "@babel/polyfill": "7.12.1",
    "escape-string-regexp": "4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.14",
    "@babel/preset-env": "7.13.12",
    "@babel/preset-typescript": "7.13.0",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@foray1010/eslint-config": "4.8.1",
    "@foray1010/prettier-config": "4.3.0",
    "@foray1010/remark-preset": "3.4.2",
    "@types/firefox-webext-browser": "82.0.0",
    "@types/jest": "26.0.22",
    "@types/rollup-plugin-json": "3.0.2",
    "babel-plugin-transform-remove-console": "6.9.4",
    "chalk": "4.1.0",
    "cross-env": "7.0.3",
    "eslint": "7.23.0",
    "fast-glob": "3.2.5",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "postcss": "8.2.9",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.2.1",
    "remark-cli": "9.0.0",
    "rollup": "2.44.0",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-svelte": "6.1.1",
    "rollup-plugin-terser": "7.0.2",
    "shx": "0.3.3",
    "svelte": "2.16.1",
    "typescript": "4.2.3",
    "web-ext": "6.0.0"
  },
  "engines": {
    "node": ">=12.13",
    "npm": ">=7"
  }
}
